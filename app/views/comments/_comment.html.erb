<% if @object.get_author.nil? || @object.get_author.id != comment.author_id %>
    <div class="comment media " id="comment<%= comment.id %>" data-id="<%= comment.id %>" style="margin-right:10px;">
      <div class="media-object pull-right " >
        <% if !comment.author.avatar_url.nil? %>
            <%= image_tag comment.author.avatar_url, class: "media-object comment-avatar", alt: "" %>
        <% else %>
            <%= image_tag 'noavatar.png', class: "media-object comment-avatar", alt: ""%>
        <% end %>
      </div>
      <div class="media-body comment-no-author" >
        <span class="strong text-inverse"><%= comment.author.user_name %></span>
        <small class="text-muted"><%= l(comment.created_at) %></small>
        <div class="margin-none comment-content"><%=  normalize_text comment.content %></div>
      </div>
    </div>
<% else %>
<div class="comment media" id="comment<%= comment.id %>" data-id="<%= comment.id %>">
  <div class="media-object pull-left">
    <% if !comment.author.avatar_url.nil? %>
        <%= image_tag comment.author.avatar_url, class: "media-object comment-avatar", alt: "" %>
    <% else %>
        <%= image_tag 'noavatar.png', class: "media-object comment-avatar", alt: "" %>
    <% end %>
  </div>
  <div class="media-body comment-author" style="padding-top: 5px; padding-bottom: 5px;">
    <span class="strong text-inverse "><%= comment.author.user_name %></span>
    <small class="text-muted"><%= l(comment.created_at) %></small>
    <div class="margin-none comment-content"><%=  normalize_text comment.content %></div>
  </div>
</div>
<% end %>
